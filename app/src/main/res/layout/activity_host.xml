<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical"
  tools:context="com.example.dknguyen.mycalculator.view.activity.HostActivity">


  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal"
    android:weightSum="2">

    <Button
      android:id="@+id/btnOptFrag"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:background="#ff00aa21"
      android:text="Option Fragment" />

    <Button
      android:id="@+id/btnSettingFrag"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginLeft="8dp"
      android:layout_marginRight="8dp"
      android:background="#ff00aa72"
      android:text="Setting Fragment" />

  </LinearLayout>
  <FrameLayout
    android:id="@+id/content_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></FrameLayout>

</LinearLayout>
